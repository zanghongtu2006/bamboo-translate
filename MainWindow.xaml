<Window x:Class="BambooTrans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BambooTrans" Width="64" Height="64"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ResizeMode="NoResize" ShowInTaskbar="False">
    <Border CornerRadius="32" Background="#AA1F2937" BorderBrush="#FFFFFFFF" BorderThickness="1"
            MouseLeftButtonDown="Border_MouseLeftButtonDown" MouseRightButtonUp="Border_MouseRightButtonUp">
        <Grid>
            <TextBlock Text="译" Foreground="White" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ToolTipService.ToolTip>
                <ToolTip Content="Alt+Q 翻译当前选中内容；右键打开菜单" />
            </ToolTipService.ToolTip>
        </Grid>
    </Border>
</Window>
