<Window x:Class="BambooTrans.Services.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="420" Height="1" WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" Topmost="True" ResizeMode="NoResize"
        ShowActivated="False"
        Focusable="False">
    <Border x:Name="RootBorder" Background="#EE111827" CornerRadius="10" Padding="12" BorderBrush="#66FFFFFF" BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="Txt" TextWrapping="Wrap" Foreground="White" FontSize="14" />
        </ScrollViewer>
    </Border>
</Window>
